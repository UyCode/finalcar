.myTitle {
    display: block;
    direction: rtl;
    text-overflow: clip;
    overflow: hidden;
    white-space: nowrap;
    margin-top: 10%;
    justify-content: right;

}

.carClass {
    width: 30%;
    height: 50px;
}

scroll-view {
    height: 800rpx;
}

.myswiper {
    width: 95%;
    margin-left: 2%;
    margin-right: 2%;
    justify-content: right;
    direction: rtl;
    border-radius: 15px 15px;
    display: block;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

